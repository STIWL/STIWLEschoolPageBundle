{% extends app.request.isXmlHttpRequest ? "EsolvingPageBundle::template_ajax.html.twig" : "EsolvingPageBundle::template.html.twig" %}
{% trans_default_domain "EsolvingPageBundle" %}
{% block title %}{% trans %} log_in {% endtrans%}{% endblock %}
{% block content %}
<div id="content">
    <h1>{{ block('title') }}</h1>
    <form method="post" action="{{ path('login_check') }}" class="form_wrap">
    {#<fieldset>
        <legend align= "center">legend alineado al centro</legend>
        Este es un ejemplo de un “fieldset” con el legend alineado al centro
    </fieldset>#}
        {% if error %}
            <div class='form_errors'>{{ error.message|trans({},'EsolvingEschoolGuestBundle') }}</div>
        {% endif %}
            <div class="form_label"><label for="username">{% trans %} code {% endtrans %}: </label></div>
            <div class="form_widget"><input type='text' name='_username' value='{{ last_username }}' id="username"></div>
            <div class="clearfix"></div>
            <div class="form_label"><label for="password">{% trans %} password {% endtrans %}: </label></div>
            <div class="form_widget"><input type='password' name='_password' id="password"></div>
            <div class="clearfix"></div>
            <div class="form_label"><label for="remember_me">{% trans %}keep_me_logged_in{% endtrans %}</label></div>
            <div class="form_widget"><input type="checkbox" id="remember_me" name="_remember_me" checked /></div>
            <div class="clearfix"></div>
            <div class="form_label">&nbsp;</div>
            <div class="form_widget"><input type='submit' value='{% trans %} log_in {% endtrans %}' class="button button-form"></div>   
        {#<input type="hidden" name="_target_path" value="esolving_eschool_userB_news" />#}
            </form>
        </div>
{% endblock %}